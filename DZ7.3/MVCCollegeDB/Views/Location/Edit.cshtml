@model MVCworkorderDB.Models.locations

@{
    ViewBag.Title = "Edit";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/style.css" />
    <title>workorder Database</title>
</head>
<body>
    <div class="container">       
        <h2>Edit</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

